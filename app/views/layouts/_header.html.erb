<header class="main-header">
    <!-- Logo -->
    <a href="<%= admin_root_path %>" class="logo">
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><b>V</b>C</span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><b>Volga</b>Cabs</span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>

      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= image_tag "avatar04.png", class: "user-image", alt: "User Image" %>
              <span class="hidden-xs"><%= (current_user.is_admin? or current_user.is_employee?) ? current_user.email : current_user.confirm_franchise.name %></span>
            </a>
            <ul class="dropdown-menu">
              <!-- User image -->
              <li class="user-header">
                <%= image_tag "avatar04.png", class: "image-circle", alt: "User Image" %>

                <p>
                  <%= (current_user.is_admin? or current_user.is_employee?) ? "Hello Admin" : current_user.confirm_franchise.name %> - <%= (current_user.is_admin? or current_user.is_employee?) ? "" : current_user.confirm_franchise.address2 %>
                  <!-- <small>Member since Nov. 2012</small> -->
                </p>
              </li>
              
              <!-- Menu Footer-->
              <li class="user-footer">
                <div class="pull-left">
                  <a href="#" class="btn btn-default btn-flat">Profile</a>
                </div>
                <div class="pull-right">
                  <a href="<%= destroy_user_session_path %>" class="btn btn-default btn-flat" data-method="delete">Sign out</a>
                </div>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
</header>