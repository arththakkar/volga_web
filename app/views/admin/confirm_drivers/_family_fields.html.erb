<div class="form-group">
	<label>Name</label>
	<%= f.text_field :name, class: "form-control", required: true %>
</div>
<div class="form-group">
	<label>Birth Date</label>
	<%= f.text_field :birth_date, class: "form-control", data: { inputmask: "'alias': 'dd/mm/yyyy'", mask: "" }, required: true %>
</div>
<div class="form-group">
	<label>Relation with Chauffeur</label>
	<%= f.text_field :relation, class: "form-control", required: true %>
</div>
<div class="form-group">
	<%= f.link_to_remove "<i class='fa fa-close'></i>".html_safe, class: "btn btn-danger" %>
</div>