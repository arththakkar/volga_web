<section class="content-header">
  <h1>
    Confirm Drivers
    <small>List</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="<%= admin_root_path %>"><i class="fa fa-dashboard"></i> Dashboard</a></li>
    <li class="active">Confirm Drivers</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">List of Confirm Drivers</h3>
          <div class="box-tools">
            <%= link_to "<i class='fa fa-plus'></i>".html_safe, new_admin_confirm_driver_path, class: "btn btn-info btn-primary" %>
          </div>
        </div>
      	<div class="box-body">
          <table id="example1" class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Mobile Number</th>
                <th>Car</th>
                <th>Car Number</th>
                <th>Plan</th>
                <th>Area</th>
                <% if current_user.is_admin? %>
                  <th>Added By</th>
                  <th>Created At</th>
                <% end %>
                <th>Action</th>
              </tr>
            </thead>
            <div id="f_list">
              <tbody>
                <% @confirm_drivers.each do |driver| %>
                  <%= puts driver.id %>
                  <tr>
                    <td><%= link_to driver.first_name, edit_admin_confirm_driver_path(driver) %></td>
                    <td><%= driver.last_name %></td>
                    <td><%= driver.mobile_number.delete(" ") %></td>
                    <td><%= driver.car.name %></td>
                    <td><%= driver.car_plate_number %></td>
                    <td><%= driver.scheme %></td>
                    <td><%= driver.area.name %></td>
                    <% if current_user.is_admin? %>
                      <td><%= driver.confirm_franchise.try(:name) %></td>
                      <td><%= driver.created_at.strftime("%d-%m-%Y") %></td>
                    <% end %>
                    <td><%= link_to "Delete", admin_confirm_driver_path(driver), method: :delete %></td>
                  </tr>
                <% end %>
              </tbody>
            </div>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
<script type="text/javascript">
	$('#example1').dataTable();
</script>